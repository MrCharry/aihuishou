.topBar {
  position: fixed;
  display: flex;
  align-items: center;
  height: 80rpx;
  z-index: 999;
}

.operatable {
  position: fixed;
  height: 80rpx;
  line-height: 80rpx;
  width: 50%;
  text-align: center;
  background-color: whitesmoke;
  border-right: 1px solid #fff;
}

.operatabled {
  position: fixed;
  height: 80rpx;
  line-height: 80rpx;
  left: 50%;
  width: 50%;
  text-align: center;
  background-color: whitesmoke;
}

.noOrder {
  position: absolute;
  top: 120rpx;
  width: 100%;
  text-align: center;
  color: #999;
}


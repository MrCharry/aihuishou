/* pages/orderRecords/index.wxss */

.topBar {
  position: fixed;
  display: flex;
  align-items: center;
  height: 80rpx;
  z-index: 999;
}

.operatable {
  position: fixed;
  height: 80rpx;
  line-height: 80rpx;
  width: 50%;
  text-align: center;
  background-color: whitesmoke;
  border-right: 1px solid #fff;
}

.operatabled {
  position: fixed;
  height: 80rpx;
  line-height: 80rpx;
  left: 50%;
  width: 50%;
  text-align: center;
  background-color: whitesmoke;
}

.noOrder {
  padding-top: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
}
.noOrder image {
  width: 100rpx;
  height: 100rpx;
}
.list-block {
  padding-top: 80rpx;
  box-sizing: border-box;
}
.list {
  display: flex;
  flex-direction: column;
}
.item {
  height: 250rpx;
  display: flex;
  margin-top: 20rpx;
  width: 100%;
  align-items: center;
  background-color: #f6f6f6;
}
.left {
  height: 100%;
  padding: 20rpx;
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}
.left .row1 {
  padding-top: 20rpx;
  display: flex;
  align-items: center;
}
.left .row1 .state {
  width: 10%;
}
.left .row1 image {
  width: 48rpx;
  height: 48rpx;
}
.left .row1 text {
  width: 90%;
  font-size: 32rpx;
}
.left .row2 text {
  font-size: 30rpx;
}
.left .row3 {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}
.left .row3 text {
  font-size: 28rpx;
  color: #a0a0a0;
}
.left .row3 label {
  margin-left: 30rpx;
}
.right {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 20%;
}
.right .confirm {
  height: 60%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #808080;
  color: #fff;
}
.right .contact {
  height: 35%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #2dbea7;
  color: #fff;
}



.list {
  width: 100%;
  height: 180rpx;
  /* border-bottom: 1rpx solid rgb(233, 233, 233); */
  position: relative;
  left: 0;
  top: 80rpx;
  overflow: hidden;
}

.item {
  position: absolute;
  width: 100%;
  height: 180rpx;
  left: 0;
  top: 10rpx;
  z-index: 100;
  background-color: #f6f6f6;
}

.bubble {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  left: 20rpx;
  top: 10rpx;
}

.address {
  position: absolute;
  left: 88rpx;
  top: 10rpx;
  line-height: 48rpx;
}

.amount {
  position: absolute;
  top: 68rpx;
  left: 20rpx;
  font-size: 32rpx;
}

.time {
  position: absolute;
  left: 20rpx;
  top: 125rpx;
  color: rgb(190, 166, 166);
  font-size: 26rpx;
}

.delOrder {
  position: absolute;
  left: 380rpx;
  top: 125rpx;
  color: rgb(190, 165, 165);
  font-size: 26rpx;
}

.menu {
  font-size: 28rpx;
  position: absolute;
  width: 100%;
  height: 180rpx;
  left: 0;
  top: 10rpx;
  z-index: 0;
}

.confirm {
  position: absolute;
  width: 150rpx;
  height: 100rpx;
  top: 0rpx;
  right: 0;
  background-color: #2dbea7;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact {
  position: absolute;
  width: 150rpx;
  height: 70rpx;
  top: 110rpx;
  right: 0;
  background-color: #2dbea7;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

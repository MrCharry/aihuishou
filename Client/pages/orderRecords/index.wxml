<!--pages/orderRecords/index.wxml-->

<view class='container' style='width:{{deviceInfo.windowWidth}}px'>

  <view class='topBar'>
    <label class='operatable' bindtap='clickOperatableOrder' style='opacity:{{view.aOpacity}}; color:{{view.aColor}}'>未完成订单</label>
    <label class='operatabled' bindtap='clickOperatabledOrder' style='opacity:{{view.bOpacity}}; color:{{view.bColor}}'>已完成订单</label>
  </view>

  <view class='noOrder' wx:if='{{tag=="operatable"&&operatableOrderList.length==0 || tag=="operatabled"&&operatabledOrderList.length==0}}' style='width:{{deviceInfo.windowWidth}}px'>
    <image src='/Resources/images/noOrder.png' mode='aspectFit' />
    <text>暂无订单记录</text>
  </view>
  
  <view class='list-block'>
    <view class='list' wx:for="{{tag=='operatable' ? operatableOrderList:operatabledOrderList}}" wx:key="{{index}}">
      <view id='{{index}}' class='item'>

        <view class='left'>
          <view class='row1'>
            <view class='state'><image src='{{item.icon}}' mode='aspectFit' /></view>
            <text>{{item.address}}-{{item.detailaddress}}</text>
          </view>
          <view class='row2'>
            <text>预计：{{item.wastename}}{{item.wasteweight}}斤</text>
          </view>
          <view class='row3'>
            <text>{{item.createtime}}</text>
            <label id='{{index}}' wx:if='{{item.btnText == "待接单"}}' bindtap='bindDelTap' style='opacity:{{view.cOpacity}}'>取消订单</label>
            <label wx:if='{{item.btnText == "已完成"}}' class='bill'>金额：{{item.pay}}元</label>
          </view>
        </view>

        <view class='right'>

          <view id='{{index}}' class='confirm' bindtap='bindConfirmTap' style='height:{{(item.finished || item.btnText=="待接单") ? "100%":"60%"}}; background-color:{{item.bdcolor}}' hover-class='hover'>
            {{item.btnText}}
          </view>
          <view id='{{index}}' wx:if='{{!item.finished && item.btnText!="待接单"}}' class='contact' bindtap='bindContactTap' hover-class='hover'>
            联系对方
          </view>

        </view>
      </view>
    </view>
  </view>
</view>



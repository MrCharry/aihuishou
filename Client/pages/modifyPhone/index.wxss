/* pages/modifyPhone/index.wxss */

label {
  white-space: nowrap;
}

.form input {
  width: 100%;
  border: 1px solid #2dbea7;
  margin-left: 20rpx;
  border-radius: 10rpx;
  height: 70rpx;
}

.form {
  padding-top: 60rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: column;
}

.row {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  justify-content: space-between;
}
.row .btn button {
  background-color: #2dbea7;
  color: #fff;
  font-size: 28rpx;
  white-space: nowrap;
}

.code {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.countryNumber {
  padding: 10rpx;
  background-color: #2dbea7;
}

.confirmBtn {
  width: 100%;
  background-color: #2dbea7;
  color: #fff;
  margin-top: 60rpx;
}

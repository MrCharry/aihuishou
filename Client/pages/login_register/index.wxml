<!--pages/login_regisiter/index.wxml-->
<view class='container' style='height:{{deviceInfo.windowHeight}}px'>
  <view class='logoIcon'>
    <image src='https://lg-gwh53phk-1252040173.cos.ap-shanghai.myqcloud.com/logoIcon.png' />
  </view>
  <view class='modal'>
    <view class='loginModel' style='width:{{deviceInfo.windowWidth*0.95}}px'>

      <view class='col1'>
        <label>手机</label>
        <label wx:if='{{view.showRow1}}'>密码</label>
        <label wx:if='{{view.showRow2}}' class='verifiedCode'>验证码</label>
      </view>

      <view class='col2'>
        <input bindinput='getInput' focus='{{focus}}' bindblur='iflegalphone' data-name='phonenum' type='number' placeholder='请输入手机号' placeholder-style='font-size:28rpx;'/>
        <input style='margin-top:30rpx;' bindinput='getInput' data-name='password' password='true' placeholder='请输入密码' placeholder-style='font-size:28rpx;' hidden='{{!view.showRow1}}' />
        <view class='colrow'>
          <input wx:if='{{view.showRow2}}' focus='{{focus2}}' value='{{code}}' bindinput='getInput' data-name="verifiedCode" type='number' placeholder='请输入验证码' placeholder-style='font-size:28rpx;'/>
          <button wx:if='{{view.showRow2}}' bindtap='getVerifiedCode' disabled='{{disabled}}' class='getVerifiedCode'>{{time ? time:'获取验证码'}}</button>
        </view>
      </view>
    </view>
    <view class='loginLabel' bindtap='goLogin' hidden='{{!view.showLoginLabel}}'>
      <text>直接登录</text>
    </view>
    <label class='loginBtn' bindtap='clickLogin'>{{view.btnText}}</label>
  </view>
  <view class='options' wx:if='{{view.showOptions}}'>
    <label bindtap='clickLeftLabel' style='opacity:{{view.cOpacity}}'>{{view.leftLabelText}}</label>
    <label bindtap='clickRightLabel' style='opacity:{{view.dOpacity}}'>{{view.rightLabelText}}</label>
  </view>
</view>
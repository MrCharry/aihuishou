/* pages/login_regisiter/index.wxss */
.container {
  background-color: #2dbea7;
}
.logoIcon {
  padding-top: 10%;
  text-align: center;
}
.logoIcon image {
  width: 200rpx;
  height: 200rpx;
}
.modal {
  margin-top: 10%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.loginModel {
  display: flex;
}
.loginModel label {
  white-space: nowrap;
}
.col1 {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.col1 label {
  color: #fff;
}
.col2 {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  width: 100%;
}
.col2 .colrow {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.loginModel input {
  border: 1px solid #cecece;
  border-radius: 10rpx;
  height: 70rpx;
  background-color: #79dacb;
  color: #fff;
}
.colrow input {
  width: 80%;
}
.getVerifiedCode {

  margin-left: 10rpx;
  background-color: #fff;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  color: #1bc3a9;
  white-space: nowrap;
  font-size: 28rpx;
}
.loginBtn {
  margin-top: 10%;
  background-color: #fff;
  color: #1bc3a9;
  width: 95%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.options {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}
.options label {
  font-size: 14px;
  color: #fff;
  padding: 20rpx;
}
.loginLabel {
  margin-top: 10rpx;
  font-size: 14px;
  width: 95%;
  text-align: right;
}
.loginLabel text {
  color: #fff;
}
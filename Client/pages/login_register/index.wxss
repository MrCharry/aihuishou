/* pages/login_regisiter/index.wxss */
.container {
  background-color: #2dbea7;
}
.logoIcon {
  padding-top: 10%;
  text-align: center;
}
.logoIcon image {
  width: 200rpx;
  height: 200rpx;
}
.loginModel {
  padding-top: 10%;
  display: flex;
  left: 10rpx;
  right: 10rpx;
  flex-direction: column;
  width: 96%;
}
.loginModel image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.loginModel input {
  border: 1px solid #cecece;
  margin-left: 30rpx;
  border-radius: 10rpx;
  height: 80rpx;
  padding-left: 20rpx;
  background-color: #79dacb;
  color: #fff;
}
.loginModel label {
  padding-left: 20rpx;
  line-height: 80rpx; 
  white-space: nowrap;
}
.row1 {
  display: flex;
  height: 80rpx;
  margin-top: 30rpx;
  justify-content: space-between;
}
.row1 label {
  color: #fff;
}
.row1 input {
  width: 74%;
}
.row2 {
  display: flex;
  height: 80rpx;
  margin-top: 30rpx;
}
.verifiedCode {
  color: #fff;
}
.getVerifiedCode {
  width: 42%; 
  margin-left: 10rpx;
  font-size: 14px;
  background-color: #fff;
  line-height: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  color: #1bc3a9;
}
.loginBtn {
  margin-top: 20%;
  background-color: #fff;
  color: #1bc3a9;
  /* width: 95%; */
  margin-left: 20rpx;
  margin-right: 0rpx;
}
.options {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}
.options label {
  font-size: 14px;
  color: #fff;
}
.loginLabel {
  margin-top: 10rpx;
  text-align: right;
  font-size: 14px;
  color: #fff;
}
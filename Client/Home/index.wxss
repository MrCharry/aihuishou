/**index.wxss**/
.topBar {
  position: fixed;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  width: 100%;
  background: #2dbea7;
  z-index: 2;
}
.topBar .left {
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}
.topBar .left image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.topBar .right {
  width: 64rpx;
  height: 56rpx; 
  padding-right: 30rpx;
}
.userIcon {
  border: 1px solid #ebebeb;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}
.userIcon .left {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.userIcon .right {
  margin-left: 10rpx;
}
.topTitle {
  background-color: whitesmoke;
  position: fixed;  
  top: 80rpx;
  height: 80rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.7;
}
.map {
  box-sizing: border-box;
}
.release {
  position: absolute;
  bottom: 60rpx;
  left: 38%;
  width: 180rpx;
  height: 180rpx;
  display: flex;
  border-radius: 50%;
  background-color: #2dbea7;
  justify-content: center;
  align-items: center;
}
.locateIcon {
  position: absolute;
  right: 30rpx;
  bottom: 20%;
}
.locateIcon .img {
  width: 60rpx;
  height: 60rpx;
}
.menuList {
  box-sizing: border-box;
  position: absolute;
  right: 0;
  background-color: whitesmoke;
  display: flex;
  flex-direction: column;
  width: 35%;
}
.menuItem {
  border: 1px solid #ebebeb;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 9;
}
.modelCurtain {
  position: fixed;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 4;
}
.modal {
  display: flex;
  align-items: center;
  justify-content: center;
}
.loginModel {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}
.closeIcon {
  text-align: right;
} 
.loginModel image {
  width: 24rpx;
  height: 24rpx;
}
.row {
  margin-top: 30rpx;
  display: flex;
}
.row .col1 {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.row .col2 {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.row .col2 .colrow {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.colrow input {
  width: 80%;
}
.getVerifiedCode {
  margin-left: 10rpx;
  background-color: #1bc3a9;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  white-space: nowrap;
  font-size: 28rpx;
}
.loginBtn {
  margin-top: 40rpx;
  background-color: #1bc3a9;
  color: #fff;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.loginModel input {
  border: 1px solid #cecece;
  margin-left: 20rpx;
  border-radius: 10rpx;
  height: 70rpx;
  padding-left: 20rpx;
}

.loginModel label {
  padding-left: 20rpx;
  white-space: nowrap;
}

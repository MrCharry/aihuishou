<!--Mine/index.wxml-->
<view class='container'>
  <view class='userBanner' style='height:{{deviceInfo.windowHeight*0.35}}px'>
    <image src='{{userInfo.imgpath ? userInfo.imgpath:"https://lg-gwh53phk-1252040173.cos.ap-shanghai.myqcloud.com/userDefault.png"}}' bindtap='clickUserProfile' style='opacity:{{view.fOpacity}}'/>
    <label style='color:#fff;'>{{userInfo.nickname ? userInfo.nickname:userInfo.name}}</label>
  </view>
  <view class='functionZoom' style='height:{{deviceInfo.windowHeight*0.65}}px'>
    <view class='row'>
      <view class='item' bindtap='clickCredit' style='opacity:{{view.aOpacity}}'>
        <image src='https://lg-gwh53phk-1252040173.cos.ap-shanghai.myqcloud.com/credits@2x.png' />
        <text>积分详情</text>
      </view>
      <view class='item' bindtap='clickOrder' style='opacity:{{view.bOpacity}}'>
        <image src='https://lg-gwh53phk-1252040173.cos.ap-shanghai.myqcloud.com/my_order@2x.png' />
        <text>回收订单</text>
      </view>
      <view class='item' bindtap='clickWallet' style='opacity:{{view.cOpacity}}'>
        <image src='https://lg-gwh53phk-1252040173.cos.ap-shanghai.myqcloud.com/wallet@2x.png' />
        <text>我的钱包</text>
      </view>
    </view>
    <view class='row'>
      <view class='item' bindtap='clickNotification' style='opacity:{{view.dOpacity}}'>
        <image src='https://lg-gwh53phk-1252040173.cos.ap-shanghai.myqcloud.com/notification@2x.png' />
        <text>消息通知</text>
      </view>
      <view class='item' bindtap='clickFeedback' style='opacity:{{view.eOpacity}}'>
        <image src='https://lg-gwh53phk-1252040173.cos.ap-shanghai.myqcloud.com/feedback@2x.png' />
        <text>意见反馈</text>
      </view>
      <view class='item' bindtap='clickSetting' hover-class='hover'>
        <image src='https://lg-gwh53phk-1252040173.cos.ap-shanghai.myqcloud.com/setting@2x.png' />
        <text>设置</text>
      </view>
    </view>
  </view>
</view>
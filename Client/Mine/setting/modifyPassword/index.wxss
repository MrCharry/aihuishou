/* Mine/setting/modifyPassword/index.wxss */

.container {
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: whitesmoke;
  display: flex;
  justify-content: center;
}

.content {
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
}

.content label {
  white-space: nowrap;
}

.row {
  display: flex;
  align-items: center;
  padding-top: 30rpx;
}

.row input {
  border: 1px solid #2dbea7;
  height: 70rpx;
  margin-left: 30rpx;
}

.getCodeLabel {
  background-color: #2dbea7;
  height: 70rpx;
  color: #fff;
  margin-left: 20rpx;
  white-space: nowrap;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.confirmBtn {
  height: 70rpx;
  margin-top: 100rpx;
  background-color: #2dbea7;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

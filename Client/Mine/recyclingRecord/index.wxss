/* Mine/orders/index.wxss */
.container {
  width: 100%;
  box-sizing: border-box;
}
.noRecord {
  padding-top: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.noRecord text {
  color: #a0a0a0;
}
.noRecord image {
  width: 100rpx;
  height: 100rpx;
}
.list {
  display: flex;
  flex-direction: column;
}
.list .item {
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  padding: 20rpx;
  background-color: #f6f6f6;
  border: 1px solid #a0a0a0;
  border-radius: 10rpx;
}
.list .item text {
  margin-top: 10rpx;
}
.list .item .time {
  color: #a0a0a0;
  font-size: 28rpx;
}